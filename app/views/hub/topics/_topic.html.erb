<div class="topic">
  <div class="topic_head">
    <%= image_tag topic.customer.avatar.try(:url)||'' %>
    <div class="topic_head_people">
      <p>
        <span class="topic_head_name"><%= topic.customer.name -%></span>
        <span class="topic_head_title"><%= topic.customer.title -%></span>
      </p>
      <p><%= topic.customer.company -%></p>
    </div>
  </div>
  <div class="topic_title">
    <p><%= topic.title -%></p>
  </div>
  <div class="topic_image_1">
    <%= image_tag topic.images.first.image.url(thumb: '@!t1') unless topic.images.blank? %>
  </div>
</div>
