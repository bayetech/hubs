<div class="topic-content">
  <div class="topic-head">
    <%= hub_avatar_tag topic.customer -%>
    <div class="topic-head-people">
      <p>
        <span class="topic-head-name bold-text"><%= topic.customer.name -%></span>
        <span class="topic-head-title"><%= topic.customer.title -%></span>
      </p>
      <p><%= topic.customer.company -%></p>
    </div>
    <p class="topic-category"><%= topic.category -%></p>
  </div>
  <div class="topic-title">
    <p><%= sanitize hub_deal_with_emoji(topic.title).html_safe -%></p>
  </div>
  <% if topic.topic_images_count > 4 -%>
    <div class="topic-image-9">
      <% topic.images.each do |ti| -%>
        <%= image_tag ti.image.url(thumb: '@!t9') -%>
      <% end %>
    </div>
  <% elsif topic.topic_images_count > 1 -%>
    <div class="topic-image-4">
      <% topic.images.each do |ti| -%>
        <%= image_tag ti.image.url(thumb: '@!t4') -%>
      <% end %>
    </div>
  <% else -%>
    <div class="topic-image-1">
      <%= image_tag topic.images.first.image.url(thumb: '@!t1') unless topic.images.blank? %>
    </div>
  <% end -%>
  <div class="topic-footer">
    <%= link_to topic_path(id: topic.uid) do -%>
      <span class="light-text flex-large-item"><%= hub_time_ago_in_words topic.activity_at -%></span>
    <% end -%>
    <span><i class="gray-reply"></i>评论</span>
    <span><i class="gray-liker"></i>赞</span>
  </div>
</div>
<% if topic.likers_count > 0 -%>
  <div class="topic-likers">
    <% topic.likers.limit(9).each do |l| -%>
      <%= hub_avatar_tag l.customer -%>
    <% end -%>
  </div>
<% end -%>
<% if topic.replies_count > 0 -%>
  <div class="topic-replies">
    <% topic.replies.each do |r| -%>
      <% next if r.new_record? -%>
      <p><%= r.customer.name -%>：<%= sanitize hub_deal_with_emoji(r.body).html_safe -%></p>
    <% end -%>
  </div>
<% end -%>
