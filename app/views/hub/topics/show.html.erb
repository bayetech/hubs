<%= render partial: 'topic', locals: { topic: @topic, refresh_heads_bar: @refresh_heads_bar } -%>
<% if @topic.likers_count.to_i > 0 -%>
  <%= hub_topic_likers_heads_bar(@topic) -%>
<% end -%>
<% if @topic.replies_count.to_i > 0 -%>
  <div class="topic-detail-replies">
    <% @topic.replies.each do |r| -%>
      <% next if r.new_record? -%>
      <div class="topic-reply">
        <%= hub_avatar_tag r.customer, style_class: :head -%>
        <div class="topic-reply-content">
          <p class="topic-reply-time"><%= hub_time_ago_in_words r.created_at -%></p>
          <p class="topic-reply-name"><%= r.customer.name -%></p>
          <p class="topic-reply-body"><%= sanitize hub_deal_with_emoji(r.body).html_safe -%></p>
        </div>
      </div>
    <% end -%>
  </div>
<% end -%>
<% if @current_customer -%>
  <div class="topic-footer-bar">
    <div class="reply-bar">
      <%= image_tag 'hubs/emotion.png', class: 'emotion' -%>
    </div>
  </div>
<% end -%>